/* pages/my_info/my_info.wxss */
.row-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 32rpx;
  color: #333333;
}
.row + .row{
  margin-bottom: 20rpx;
}
.row .text{
  margin-left: 50rpx;
}
.image {
  width: 50rpx;
  height: 50rpx;
}
.arrow{
  margin-left: auto;
  margin-right: 0rpx;
}
