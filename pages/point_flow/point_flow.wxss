page{
  height: 100%;
  background-color: rgba(249,249,249,1);
}
body {
  font-family: "Microsoft YaHei";
}
.contain
{
   /* margin-left: 30rpx;
   margin-right: 30rpx; */
}
.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.my-point-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333333;
  margin-top:8rpx;
}
.current-points{
  margin-top: 22rpx;
  font-size:24rpx;
  font-weight:400;
  line-height:34rpx;
  color:rgba(102,102,102,1);
}
.point-text{
  font-size:48rpx;
  font-weight:500;
  line-height:66rpx;
  color:rgba(255,162,0,1);
}
.point{
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  }
  .point text{
    margin-bottom: 10rpx;
  }
  /* .center-view{
    background-color:pink;
  } */
.order-items
{
  /* height: 116rpx; */
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
}
.order-detail-item-top{
  display: flex;
  flex-flow: column nowrap;
}

.text-normal{
  font-size: 28rpx;
  line-height: 40rpx;
}

.text-small{
  font-size: 24rpx;
  line-height: 28rpx;
  color:#888;
}
.standardRight{
  padding-top: 16rpx;
}
.outside-view{
  border-bottom:2rpx dashed rgba(240,241,242,1);
  margin:0 auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  /* background-color: pink; */
  width: 650rpx;
}


.top-user-img {
  height: 100rpx;
  width: 100rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}
.order-detail-item-bottom {
  padding-top: 12rpx;
  padding-bottom: 16rpx;
}
.emptyText {
  margin-top: 20px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  font-size: 12px;
}
.order-detail-title {
  display: flex;
  height: 60rpx;
  margin-top: 2px;
  align-items: center;
  background-color: #fff;
  font-size:24rpx;
  font-weight:bold;
  line-height:34rpx;
  color:rgba(51,51,51,1);
  padding-left: 50rpx;
}

.order-detail-item {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  background-color: #fff;
}

.order-detail-item-img {
  height: 120rpx;
  width: 120rpx;
}
.detail-code{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: flex-start;
}
.order-detail-item-code{
  color: #ADD8E6;
  font-size: 14px;
  margin-left: 10rpx;
  margin-top: 10px;
}
.order-detail-item-text {
  margin-left: 10rpx;
  flex: 1;
}

.order-detail-item-right {
  display: flex;
  flex-flow: column nowrap;
}

.order-detail-item-right-down {
  align-self: flex-end;
}

.order-tab {
  display: flex;
  flex-flow: column nowrap;
  background-color: #fff;
}

.order-tab-item {
  display: flex;
  flex-flow: row nowrap;
}

.order-tab-right {
  margin-left: auto;
  margin-right: 20rpx;
}
.order-tab-bottom{
display: flex;
justify-content: space-between;
align-items: center;
height: 80rpx;
}

.order-btn{
  width: 90%;
  margin-left: auto;
  margin-right: auto;
}
.refund{
  margin-top: 10rpx;
}
.margin-left{
  margin-left: 20px;
}
